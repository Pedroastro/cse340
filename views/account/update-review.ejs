<h1><%- title %></h1>
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<div class="reviews-container">
    <div class="form-container">
        <form action="/account/update-review" method="POST">
            <div class="form-group">
                <label for="review_date">Date:</label>
                <input type="datetime" name="review_date" id="review_date" value="<%= locals.review_date %>" readonly required>
            </div>
            <div class="form-group">
                <label for="review_screenname">Screen Name:</label>
                <input type="text" name="review_screenname" id="review_screenname" value="<%= locals.review_screenname %>" required>
            </div>
            <div class="form-group" id="review_text_container">
                <label for="review_text">Review:</label>
                <textarea name="review_text" id="review_text" required><%= locals.review_text %></textarea>
            </div>
            <input type="hidden" name="review_id" <% if(locals.review_id) { %> value="<%= locals.review_id %>" <% } %>>
            <input type="hidden" name="account_id" <% if(locals.accountData.account_id) { %> value="<%= locals.accountData.account_id %>" <% } %>>
            <button type="submit">Update Review</button>
        </form>
    </div>
</div>